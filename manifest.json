{
  "manifest_version": 3,
  "name": "youtube reader",
  "version": "1.25",
  "description": "video to blog",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "96": "images/icon-96.png"
  },
  "permissions": [
    "activeTab", "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "96": "images/icon-96.png"
    }
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://www.youtube.com/watch?v=*", "http://www.youtube.com/*" 
      ]
    }
  ]
}